@using ArtContest.Models
@model Picture
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link href="~/Common.css" rel="stylesheet" />
</head>

<body>
    <h1>Picture Details</h1>
    <ul>
        <li style="float:right">@Html.ActionLink("Back", "Index", "Admin")</li>
    </ul>
    <img style="width:70%; margin-left:15%" src="~/@Model.PicturePath" />
    <table border="1">
        <tr>
            <th>Title</th>
            <th>Picture Description</th>
            <th>Student Firstname</th>
            <th>Student Lastname</th>
            <th>Age</th>
            <th>School</th>
            <th>Stree</th>
            <th>City</th>
            <th>State</th>
            <th>Zip Code</th>
            <th>Teacher FirstName</th>
            <th>Teacher LastName</th>
            <th>Parent FirstName</th>
            <th>Parent LastName</th>
            <th>Parent Email</th>
            <th>Uploaded Date</th>
        </tr>
        <tr>
            <td>@Model.Title</td>
            <td>@Model.Description</td>
            <td>@Model.Student.User.UserFirstName</td>
            <td>@Model.Student.User.UserLastName</td>
            <td>@Model.Student.Age</td>
            <td>@Model.Student.School</td>
            <td>@Model.Student.Street</td>
            <td>@Model.Student.City</td>
            <td>@Model.Student.State</td>
            <td>@Model.Student.Zip</td>
            <td>@Model.Student.TeacherFirstName</td>
            <td>@Model.Student.TeacherLastName</td>
            <td>@Model.Student.ParentFirstName</td>
            <td>@Model.Student.ParentLastName</td>
            <td>@Model.Student.ParentEmail</td>
            <td>@Model.UploadDate</td>
        </tr>
    </table>
    
</body>
</html>
